<script>

    document.getElementById("slCarModel").fstdropdown.rebind();
    function slBrandchange() {

        var param = {
            "CarBrandID": $("#slCarBrand").val()
        }
        $.ajax({
            url: '/Ajax/LoadCarModel',
            data: param,
            dataType: 'text',
            type: 'POST',
            cache: false,
            success: function (result) {
                $("#slCarModel").html(result)
                document.getElementById("slCarModel").fstdropdown.rebind();
            }
        });
    }

