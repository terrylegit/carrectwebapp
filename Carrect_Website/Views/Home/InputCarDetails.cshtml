<section id="hero" class="d-flex align-items-center">
    <div class="container">
        <div class="row mybackground">
            <div class="col-lg-12 d-flex justify-content-center pt-5 pt-lg-0 order-2 order-lg-1" data-aos="fade-up">
                <div class="m-5" style="background: #fff; border-radius: 20px">
                    <div class="m-3">
                        <div class="stepul">
                            <ul>
                                <li>
                                    <a data-text="Thông tin đặt lịch" data-value="1" class="achung" onclick="active(this)">
                                        <span>1</span>
                                    </a>
                                </li>
                                <li>
                                    <a data-text="Thông tin xe" data-value="2" class="aactive achung" onclick="active(this)">
                                        <span>2</span>
                                    </a>
                                </li>
                                <li>
                                    <a data-text="Lựa chọn dịch vụ" data-value="3" class="achung" onclick="active(this)">
                                        <span>3</span>
                                    </a>
                                </li>
                                <li>
                                    <a data-text="Xác nhận đơn hàng" data-value="4" class="achung" onclick="active(this)">
                                        <span>4</span>
                                    </a>
                                </li>
                                <li>
                                    <a data-text="Tìm kiếm chuyên gia" data-value="5" class="achung" onclick="active(this)">
                                        <span>5</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="form_datlich">
                            <div class="d-flex justify-content-center">
                                <h1 class="d-flex justify-content-center" style="color: #003E5F; margin-bottom: 0px">
                                    THÔNG TIN XE
                                </h1>
                            </div>
                            <div class="form_datlich_inputbox myslect">
                                <select onchange="slBrandchange()" class='fstdropdown-select' id="slCarBrand" data-placeholder="Search...">
                                    <option value="">Chọn hãng xe</option>
                                    @if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <option value="@item.ID">@item.Name</option>

                                        }
                                    }
                                </select>
                            </div>
                            <div class="form_datlich_inputbox myslect">
                                <select class='fstdropdown-select' id="slCarModel" data-placeholder="Search...">
                                    <option value="">Chọn loại xe...</option>
                                </select>
                            </div>
                            <div class="form_datlich_inputbox">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form_datlich_inputbox">
                                            <input placeholder="Biển số xe" /> <i class='bx bx-info-circle'></i>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form_datlich_inputbox">
                                            <input placeholder="Nhập màu xe" /><i class='bx bx-color-fill'></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="themanhxebox">
                                <span>Thêm ảnh xe</span>
                                <div class="themanh_item">
                                    <img src="~/assets/img/cars.jpg" />
                                </div>
                                <div class="themanh_plus">
                                    <a>
                                        <i class="bx bx-plus"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div style=" width: 150px; border-radius: 50px; text-align: center; ">
                                <a class="d-flex align-items-center" onclick="fetchStep1()" href="#" style="color: #95ACA9">
                                    <i class="fa fa-angle-double-left fa-2x"></i>
                                    <strong class="d-flex align-items-center">
                                        &nbsp &nbsp TRỞ VỀ
                                    </strong>
                                </a>
                            </div>
                            <div style="outline:2px solid #003E5F;border: 1.5px solid #fff; width: 150px; border-radius: 50px; text-align: center; background: #003E5F; ">
                                <a class="d-flex align-items-center" onclick="fetchStep3()" href="#" style="color: #fff">
                                    <strong class="d-flex align-items-center">
                                        <i class="fa fa-angle-double-right fa-2x" style="padding-left:10px; padding-right:15px"></i>
                                        TIẾP THEO
                                    </strong>
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>

</section><!-- End Hero -->
